<section class="destinations-area section-gap">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4">
                    <div class="single-destinations">
                        <div class="thumb">
                            <img src="~/@item.Hotel_pic" alt="">
                        </div>
                        <div class="details">
                            <h4 class="d-flex justify-content-between">
                                <span>@item.Hotel_Name</span>
                                <form asp-controller="Order" asp-action="create" method="get">
                                    <input type="text" name="room_id" value="@item.Room_id" hidden />
                                    <input type="text" name="room_price" value="@item.Room_price" hidden />
                                    <input type="text" name="user_id" value="@User.Claims.First().Value" hidden />
                                    <button type="submit" class="btn  price-btn">Book</button>

                                </form>
                            </h4>
                            <ul class="package-list">
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>Swimming pool</span>
                                    @if (item.SwimmingPool == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }

                                </li>
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>Gymnesium</span>
                                    @if (item.Gymnesium == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }
                                </li>
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>Wi-fi</span>
                                    @if (item.Wi_fi == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }
                                </li>
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>Room Service</span>
                                    @if (item.RoomService == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }
                                </li>
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>Restaurant</span>
                                    @if (item.Restaurant == true)
                                    {
                                        <span>Yes</span>
                                    }
                                    else
                                    {
                                        <span>No</span>
                                    }
                                </li>
                                <li class="d-flex justify-content-between align-items-center">
                                    <span>Price per night</span>

                                    <strong>
                                        <b>
                                            <span>@item.Room_price !</span>
                                        </b>
                                    </strong>


                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
