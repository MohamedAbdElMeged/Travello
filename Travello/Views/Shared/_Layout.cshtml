<body>
    <header id="header">
        <div class="header-top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-sm-6 col-6 header-top-left">
                        <ul>
                           <li>Mohamed</li>
                            <li>Abd EL-Meged</li>
                        </ul>
                    </div>
                    
                    </div>
                </div>
            </div>
        
    
        <div class="container main-menu">
            <div class="row align-items-center justify-content-between d-flex">
                <div id="logo">
                    <a href="index.html"><img src="~/img/logo.png" alt="" title="" /></a>
                </div>
                <nav id="nav-menu-container">
                    <ul class="nav-menu">
                        <li><a href="/home/index">Home</a></li>
                        <li><a href="/Room/index">Packages</a></li>
                        <li><a href="/home/privacy">About</a></li>

                        <li><a href="/home/contact">Contact</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                    <button type="submit" class="primary-btn text-uppercase">Logout</button>
                                </form>
                            </li>
                        }

                        </ul>
                </nav><!-- #nav-menu-container -->
            </div>
        </div>
    </header><!-- #header -->
    <!-- start banner Area -->
    <section class="banner-area relative">
        <div class="overlay overlay-bg"></div>
        <div class="container">
            <div class="row fullscreen align-items-center justify-content-between">
                <div class="col-lg-6 col-md-6 banner-left">
                    <h6 class="text-white">Away from monotonous life</h6>
                    <h1 class="text-white">T R V E L L O</h1>
                    <p class="text-white">
                        The best website to search for hotels .. Booking now is very easy !</p>
                    @*@if (User.Identity.IsAuthenticated)
                    {
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="primary-btn text-uppercase">Logout</button>
                        </form>

                    }
                    else
                    {
                        <a href="/Identity/Account/Register" class="primary-btn text-uppercase">Register</a>
                        <a href="/Identity/Account/Login" class="primary-btn text-uppercase">Login</a>
                    }*@
     </div>
    <!-- End banner Area -->



        <partial name="_CookieConsentPartial" />
        
            @RenderBody()
        
    
